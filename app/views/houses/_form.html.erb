      <h2><%= pluralize(@house.errors.count, "error") %> prohibited this house from being saved:</h2>

      <ul>
      <% @house.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :motto %><br />
    <%= f.text_field :motto %>
  </div>
  <div class="field">
    <%= f.label :sigil %><br />
    <%= f.text_field :sigil %>
  </div>
  <div class="field">
    <%= f.label :castle %>
    <%= f.collection_select :castle_id, @castles, :id, :name, prompt: "Select a Castle" %>
