<%= form_for(@character) do |f| %>
  <% if @character.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@character.errors.count, "error") %> prohibited this character from being saved:</h2>

      <ul>
      <% @character.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :nickname %>
    <%= f.text_field :nickname, placeholder: "e.g. \"Kingslayer\""   %>
  </div>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: "e.g. \"Lord of Winterfell\"" %>
  </div>
  <div class="field">
    <%= f.label :dob %><br />
    <%= f.date_select :dob %>
  </div>
  <div class="field">
    <%= f.label :is_male %>
    <%= f.select :is_male, [['Male',1], ['Female',0]] %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :house %>
    <%= f.collection_select :house_id, @houses, :id, :name, prompt: "Select a House" %>
  </div>
  <div class="field">
    Is this character in an order?
    <%= f.collection_select :order_id, Order.all, :id, :name, prompt: "Select a Order" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
